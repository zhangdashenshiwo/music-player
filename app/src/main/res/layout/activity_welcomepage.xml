<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wlecomePage_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcom_back_1" />

    <!--阴影化-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70555555" />





    <!--动态文字-->
    <com.hanks.htextview.scale.ScaleTextView
        android:id="@+id/wlecomePage_scaleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/wlecomePage_loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wlecomePage_scaleTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        app:indicatorColor="#ff1352"
        app:indicatorName="LineScaleIndicator" />




</RelativeLayout>
